    <linear orientation="v" class="notifi-wrapper">
        <image class="bg"/>
        <label id="notifi-content"></label>
        <label id="notifi-time"></label>
		<button id="mask"/>
    </linear>
    
    <style type="text/css">

        .notifi-wrapper {
            margin-left: 10px;
            width: 300px;
            height: auto;
        }
        
        .bg {
			width: 100%;
			height: 105%;
			position: absolute !important;
			top: 0;
			left: 0;
			image-mode: stretch;
        }

        #notifi-content {
            width: 280px;
            height: 20px;
            color: #333;
            font-size: 16px;
            margin-top: 5px;
			margin-bottom: 3px;
            margin-left: 12px;
			text-align: left;
        }

		#notifi-time {
            width: 280px;
            height: 14px;
            color: #666;
            font-size: 12px;
            margin-top: 5px;
			margin-bottom: 5px;
            margin-left: 12px;
			text-align: left;
        }
		
		#mask {
			width: 100%;
			height: 100%;
			position: absolute !important;
			top: 0;
			left: 0;
		}

    </style>
</ui>