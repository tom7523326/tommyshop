<?xml version="1.0" encoding="utf-8" ?>
<ui namespace="IndexNotifiBarItem_iPhone">
    <linear orientation="v" class="wrapper">
        <button id="notify" class="button">@{topview_message}</button>
        <linear orientation="v" id="badge-group">
            <image id="badge-bg"/>
            <label id="badge-count"></label>
        </linear>
    </linear>
    
    <style type="text/css">

        .wrapper {
            width: 50px;
            height: 44px;
        }
        
        .button {
            margin-top: 7px;
            font: 13px bold;
            text-align: center;
            color: #fff;
            width: 100%;
            height: 29px;
            button-image: url(nav-right.png);
            position: absolute;
        }

        #badge-group {
            width: auto;
            height: 15px;
            float: right;
            v-float: top;
            margin-top: 2px;
        }
        
        #badge-bg {
            width: 100%;
            height: 100%;
            position: absolute !important;
            top: 0;
            left: 0;
            image-mode: stretch;
            image-src: url(search-new-shopping-cart-num-bg.png);
        }
        
        #badge-count {
            color: white;
            width: auto;
            height: 100%;
            text-align: center;
            line-height: 13px;
            font-size: 10px;
			font-weight: bold;
			margin-left: 5px;
			margin-right: 5px;
        }
        
        </style>
</ui>