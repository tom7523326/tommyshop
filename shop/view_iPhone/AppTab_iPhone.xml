<?xml version="1.0" encoding="utf-8" ?>
<ui namespace="tabbar" class="container">

    <linear class="wrapper" orientation="h">
		<image id="bg"/>
		<linear id="home" class="item-wrapper" orientation="h">
			<image id="home-bg" class="item-active-bg"></image>
			<button id="home-button" class="item-icon icon-home"></button>
		</linear>
		<linear id="search" class="item-wrapper" orientation="h">
			<image id="search-bg" class="item-active-bg"></image>
			<button id="search-button" class="item-icon icon-search"></button>
		</linear> 
		<linear id="cart" class="item-wrapper" orientation="h">
			<image id="cart-bg" class="item-active-bg"></image>
			<button id="cart-button" class="item-icon icon-cart"></button>
			<linear class="badge-wrapper">
				<image id="badge-bg" class="badge-bg"/>
				<label id="badge" class="badge-number"/>
			</linear>
		</linear>
		<linear id="user" class="item-wrapper" orientation="h">
			<image id="user-bg" class="item-active-bg"></image>
			<button id="user-button" class="item-icon icon-user"></button>
		</linear>
    </linear>

    <style type="text/css">
		#bg {
			image: url(footer-bg.png) !important;
			image-insets: 0 25;
			image-mode: fit;
			position: absolute;
			left: 0;
			top: 0;
		}
		
        .wrapper {
			width: 100%;
			height: 100%;
			float: center;
        }

		.item-wrapper {
			width: 25%;
			height: 100%;
		}

		.item-active-bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0;
			top: 3px;
			image: url(footer-active-bg.png);
		}
		
		.item-icon {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}

		.icon-home {
			image: url(footer-home-icon.png) !important;
			image-selected: url(footer-home-active-icon.png) !important;
		}

		.icon-search {
			image: url(footer-search-icon.png) !important;
			image-selected: url(footer-search-active-icon.png) !important;
		}

		.icon-cart {
			image: url(footer-shopping-cart-icon.png) !important;
			image-selected: url(footer-shopping-cart-active-icon.png) !important;
		}

		.icon-user {
			image: url(footer-user-icon.png) !important;
			image-selected: url(footer-user-active-icon.png) !important;
		}

		.badge-wrapper {
			width: auto;
			height: 15px;
			position: absolute;
			left: 45px;
			top: 6px;
		}
		
		.badge-bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			image-src: url(search-new-shopping-cart-num-bg.png);
		}
		
		.badge-number {
			width: auto;
			height: 100%;
			color: white;
			margin-left: 8px;
			margin-right: 8px;
			font-size: 10px;
			font-weight: bold;
			text-align: center;
		}

    </style>
</ui>
